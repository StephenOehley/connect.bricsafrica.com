@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_BusinessGeneratorLayout.cshtml";
}

<br />
<div>
    <div id="Main" class="signup-container" style="display: none">
        <div id="SignInContent" class="SignInContent">
            <div id="LeftArea" class="LeftArea" style="display: none;">
                <div class="Header text-bg-formcontent">
                    Sign in using your account on:</div>
                <br />
                <div id="IdentityProvidersList">
                </div>
                <div class="bg-textblue" id="MoreOptions" style="display: none;">
                    <a href="" onclick="ShowDefaultSigninPage(); return false;">Show more options</a></div>
                <br />
            </div>
            <div id="Divider" class="Divider" style="display: none;">
                <div class="DividerLine">
                </div>
                <div>
                    Or</div>
                <div class="DividerLine">
                </div>
            </div>
            <div id="RightArea" class="RightArea" style="display: none;">
                <div class="Header text-bg-formcontent">
                    Sign in using your account on:</div>
                <br />
                <form onsubmit="EmailAddressEntered(); return false;">
                <input type="text" id="EmailAddressTextBox" />
                <input type="submit" id="EmailAddressSubmitButton" value="Submit" /><br />
                <br />
                <label id="EmailAddressError">
                </label>
                </form>
            </div>
        </div>
        <div class="Header text-bg-formcontent">
            or sign in on Business Generator:</div>
        <br />
        <form action="/account/Login?ReturnUrl=@ViewBag.ReturnUrl" method="post">
        <span class="field-validation-valid" data-valmsg-for="Username" data-valmsg-replace="true">
        </span>
        <table>
            <tr>
                <td width="180" class="tr-signup">
                    <label for="Username" class="text-allcontent">Username</label>
                </td>
                <td width="250">
                    <input class="text-box single-line text-allcontent" data-val="true" data-val-required="The Username field is required." id="Username" name="Username" type="text" value=""/>
                    <span class="field-validation-valid" data-valmsg-for="Password" data-valmsg-replace="true"> </span>
                </td>
            </tr>
   
            <tr>
                <td width="180" class="tr-signup">
                    <label for="Password" class="text-allcontent">Password</label>
                </td>
                <td width="250">
                    <input class="text-box single-line password text-allcontent" data-val="true" data-val-required="The Password field is required." id="Password" name="Password" type="password" value="" autocomplete="off"/>  
                    <span class="field-validation-valid" data-valmsg-for="DisplayType" data-valmsg-replace="true">
                     <br />
                     @Html.ActionLink("Reset Password", "ResetPassword", "Account", new { @class = "linksmall" })
                </td>
            </tr>
        </table>
      
        </span>
        <div class="editor-field">
            <input class="text-allcontent" data-val="true" data-val-required="The DisplayType field is required." id="DisplayType" name="DisplayType" type="hidden" value="StandardPage">
        </div>
        <br />
        <input type="submit" value="Login" class="button-contact">
        <br />
        <br />
        <p>@ViewBag.Message</p>
        </form>
    </div>
    <div id="pageValidation">
    </div>
    <br />
    <br />
    <br />
</div>

<script src="../../Scripts/acsLogin.js" type="text/javascript"></script>
<!-- This script gets the HRD metadata in JSON and calls the callback function which renders the links -->
<script src="@ViewBag.HrdFeed" type="text/javascript"></script>


