@model BricsWeb.Models.SubscriptionProductModel[]
@{
    ViewBag.Title = "Select";
    Layout = "~/Views/Shared/_BusinessGeneratorLayout.cshtml";
    var buttonClass = string.Empty;
}

<div class="form-profile">
    <img src="../../Content/Images/BusinessGenerator/step_upgrade.png" />
    <br />
    <br />
    <div class="membership-content">
        <h2 class="text-allcontent" style="margin-left: 5px">Your current membership level is : @ViewBag.CurrentSubscriptionDescription</h2>
        <img src="../../Content/Images/BusinessGenerator/MembershipOptions.jpg" />
        <br />
        <div class="membership-options">
            <h2 class="text-allcontent">Please Select an Annual Membership Subscription For Purchase:</h2>
            <br />

            @if (Model.Count() == 0)
            {
                <h2>You have allready upgraded - thank you !</h2>
            }
            else
            {   
                   
            foreach (BricsWeb.Models.SubscriptionProductModel subscriptionProduct in Model)
            {
                switch (subscriptionProduct.Level)
                        {
                            case 0: 
                                buttonClass = "button-silver";//this should never occur
                                break;
                            case 1:
                                 buttonClass = "button-silver";
                                 break;
                            case 2:
                                 buttonClass = "button-gold";
                                 break;
                            case 3:
                                 buttonClass = "button-platinum";
                                 break;
                            default:
                                 buttonClass = "button-silver";
                                break;
                        }                   
                 
                <div class="@buttonClass">
                <a href="/Payment/Purchase?ProductID=@subscriptionProduct.ID&UpgradeProductID=@ViewBag.UpgradeSubscription">@subscriptionProduct.Name</a>
                </div>
            }
        }
        </div>
        <br />
        <br />
    </div>
</div>
