@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_BusinessGeneratorLayout.cshtml";
}

<div class="form-profile text-allcontent">
<form action="/Account/SendResetPasswordEmail" id="signupform" method="post" class="form-padding">
<h1 class="text-be-formcontent">Please Enter Your Email Address To Reset Your Password</h1>
<br />
<br />
<label for="Name">Email</label>
<br />
<input accesskey="n" class="required" id="email" name="email" style="width: 200px" type="text" value="" autocomplete="off" /><br />
<br />
<br />
<input type="submit" id="bSignup" name="bSignup" value="Reset" accesskey="s" class="form-button" />
<br />
<br />
</form>
</div>
