@{
    ViewBag.Title = "Welcome";
    Layout = "~/Views/Shared/_BusinessGeneratorLayout.cshtml";
}
<div class="form-profile">
    <div class="getstarted-content">
        <br />
        <br />
        <p class="text-bg-formcontent text-align-center">
            Welcome to BRICS AFRICA B2B Business Generator</p>
        <br />
        <br />
        <img class="imagecenternew" alt="" src="../../Content/Images/BusinessGenerator/Steps.png" /><br />
        <br />
        <p class="textblue getstarted-margintext">
            Sign Up (Free!)</p>
        <br />
        <p class="getstarted-margintext text-allcontent">
            •&nbsp;&nbsp; Get started by registering for BRICS AFRICA B2B Business Generator&nbsp;
            <a href="/account/signup" target="_blank">Sign Up Now</a></p>
        <br />
        <p class="textblue getstarted-margintext">
            Create Profile</p>
        <br />
        <p class="getstarted-margintext text-allcontent">
            •&nbsp;&nbsp; Navigate to the "MY PROFILE" tab and complete the "Personal Profile"
            and "Company Profile" sections</p>
        <br />
        <p class="textblue getstarted-margintext">
            Add Products (Those Offered By Your Company)</p>
        <br />
        <p class="getstarted-margintext text-allcontent">
            •&nbsp;&nbsp; From the "MY PROFILE" tab select the "Product Profile" section</p>
        <p class="getstarted-margintext text-allcontent">
            •&nbsp;&nbsp; Complete all of the fields in the "Product Information" section, then
            click "SAVE" at the bottom of the fields</p>
        <p class="getstarted-margintext text-allcontent">
            •&nbsp;&nbsp; To ADD a new PRODUCT click the "Add Product" button on the left then
            complete as above</p>
        <p class="getstarted-margintext text-allcontent">
            •&nbsp;&nbsp; To select an exsisting product simply click the product name from
            the "Product list" on the left under the "My Products" section</p>
        <p class="getstarted-margintext text-allcontent">
            •&nbsp;&nbsp; To REMOVE a product click the product name, then click "Remove Product"</p>
        <br />
        <p class="textblue getstarted-margintext">
            Add Buyer Requests (Products Which Your Company Requires)</p>
        <br />
        <p class="getstarted-margintext text-allcontent">
            •&nbsp;&nbsp; From the "MY PROFILE" tab select the "Buyer Profile" section</p>
        <p class="getstarted-margintext text-allcontent">
            •&nbsp;&nbsp; Complete all of the fields in the "Request Detail" section, then click
            "SAVE" at the bottom of the fields</p>
        <p class="getstarted-margintext text-allcontent">
            •&nbsp;&nbsp; To ADD a new REQUEST click the "Add Request" button on the left then
            complete as above</p>
        <p class="getstarted-margintext text-allcontent">
            •&nbsp;&nbsp; To select an exsisting request simply click the request name from
            the "Request list" on the left under the "My Requests" section</p>
        <p class="getstarted-margintext text-allcontent">
            •&nbsp;&nbsp; To REMOVE a request click the request name, then click "Remove Request"</p>
        <br />
        <p class="textblue getstarted-margintext">
            Upgrade</p>
        <br />
        <p class="getstarted-margintext text-allcontent">
            •&nbsp;&nbsp; To upgrade your profile for access to events and featured products
            navigate to the "Company Profile" section</p>
        <br />
    </div>
</div>
<br />
